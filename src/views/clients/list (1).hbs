<section class="mt-3">
  <div class="d-flex justify-content-evenly">
    {{>modal}}
    <div></div>
  </div>
  </div>
  <div class="d-flex justify-content-center">
    <table class="border border-dark mt-3">
        {{#if clients}}
        <thead>
        <tr>
            <th class="border border-dark px-2">Id</th>
            <th class="border border-dark px-2">Nombre</th>
            <th class="border border-dark px-2 text-center">Acciones</th>
        </tr>
        </thead>
        <tbody>
        {{#each clients as |client|}} <!-- Utilizando 'as |client|' para definir el nombre de la variable del cliente -->
        <tr>
            <td class="px-2 pt-2 border border-dark">{{client.id}}</td>
            <td class="px-2 pt-2 border border-dark">{{client.name}}</td>
            <td class="px-2 border border-dark">
            <button class="my-1 btn btn-sm text-primary border border-primary">Editar</button>
            <button class="my-1 btn btn-sm text-danger border border-danger">Eliminar</button>
            </td>
        </tr>
        {{/each}}
        <tr>
            <td colspan="2" class="px-2 border border-dark">Total</td>
            <td class="border border-dark text-center">{{clients.length}}</td>
        </tr>
        {{else}}
        <tr>
            <td colspan="3" class="text-center">No hay clientes disponibles</td>
        </tr>
        {{/if}}
        </tbody>
    </table>
  </div>
</section>